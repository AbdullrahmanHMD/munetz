{
    "manifest_version": 3,
    "name": "Axiona Bot",
    "version": "2.0",
    "description": "RIS Assistant Chatbot",
    "permissions": ["tabs", "activeTab"],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://lxmzr818ca.execute-api.eu-central-1.amazonaws.com;"
    },

    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/icon.png",
                "axiona-react/dist/react_bundle.js",
                "axiona-react/dist/node_modules_web-vitals_dist_web-vitals_js.react_bundle.js"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js", "axiona-react/dist/react_bundle.js"],
            "css": ["bubble.css"]
        }
    ],
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "48": "icon32.png",
            "128": "icon192.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon32.png",
        "128": "icon192.png"
    }
}
